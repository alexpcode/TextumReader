<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/myscripts")
    @Scripts.Render("~/bundles/jsextlibs")
    
    @Styles.Render("~/Content/themes/base/css")
    
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/bootstrap-theme")
    
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="page">
        <div id="menu" class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("Textum Reader", "Index", "Home", null, new { @class = "navbar-brand" })
                    <button class="btn btn-success navbar-toggle"
                            data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @Html.MenuLink("Materials", "Index", "Material")
                        @Html.MenuLink("Dictionaries", "Index", "Dictionary")
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>

        <section id="content" class="container">
            @RenderBody()
        </section>
        <hr style="margin-top:18px;"/>
        <footer id="footer" class="container"><p class="text-muted">© 2014 TextumReader</p></footer>
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>